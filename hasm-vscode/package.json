{
    "name": "hasm",
    "displayName": "Hasm",
    "author": {
        "name": "Lucas Baizer"
    },
    "publisher": "lucasbaizer",
    "description": "Tools for hasmer's Hermes assembly",
    "repository": {
        "type": "git",
        "url": "https://github.com/LucasBaizer2/hasmer"
    },
    "bugs": {
        "url": "https://github.com/LucasBaizer2/hasmer/issues"
    },
    "license": "MIT",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:hasm"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hasm",
                "aliases": [
                    "Hasm",
                    "hasm"
                ],
                "extensions": [
                    ".hasm"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/hasm-light.png",
                    "dark": "./images/hasm-dark.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "hasm",
                "scopeName": "source.hasm",
                "path": "./syntaxes/hasm.tmLanguage.json"
            }
        ],
        "snippets": [
			{
				"language": "hasm",
				"path": "./snippets/snippets.json"
			}
		]
    },
    "scripts": {
		"vscode:prepublish": "yarn compile",
		"compile": "tsc -b && node scripts/out/copy-instructions.js",
		"watch": "tsc -b -w",
		"postinstall": "cd scripts && yarn install && cd ../client && yarn install && cd ../server && yarn install && cd .."
	},
    "devDependencies": {
        "@types/node": "^17.0.21",
        "typescript": "^4.5.5"
    }
}
